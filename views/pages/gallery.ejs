<div class="container">
    
    <div class="container panel panel-body">
            <h1>Gallery</h1>
    </div>
        <div class="container panel panel-body" id="image-grid">
            <dog-images ng-model='images' ng-repeat='image in images'></dog-images>
        </div>
        
        <div class="container panel panel-body">
            <h2>Manage Gallery Photos</h2>
            <div ng-model='images' ng-repeat='image in images'>
                <form ng-submit="updateImage()">
                    <div class="form-group col-md-3">
                        <img class="img img-responsive thumbnail" src="{{image.imageUrl}}">
                        <label for="input">Edit Images</label>
                        <input type="text" id="input" value="{{ image.imageUrl }}">
                        <input type="submit" class="btn btn-default">
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>