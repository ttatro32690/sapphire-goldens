<div class="col-md-3 golden-block" ng-repeat="type in types">
	<!-- Button trigger modal -->
	<a ng-click="getSimilarGoldens(type.type)" class="btn btn-lg" data-toggle="modal" data-target="#{{$index}}">
	{{type.type}}
	<img src="{{type.imageFiles[0]}}" class="img img-responsive img-rounded">
	</a>
	<!-- Modal -->
	<div class="modal fade bs-example-modal-lg" id="{{$index}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		<div class="modal-dialog modal-lg" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" ng-click="exitModal()" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="myModalLabel">{{type.type}}</h4>
				</div>
				<div class="modal-body panel-body">
					<div class="row">
						<div class="col-xs-1 arrow">
							<a ng-click="prev()"><i class="fa fa-chevron-left fa-32x" aria-hidden="true"></i></a>
						</div>
						<div class="col-xs-10">
							<h3>{{golden.name}}</h3>
							<div class="row">
								<div class="col-xs-6">
									<p>{{golden.birthdate | date:'MM-dd-yyyy'}}</p>
									<p>{{golden.description}}</p>
								</div>
								<div class="col-xs-6">
									<img ng-src="{{mainImage}}" class="img img-responsive img-rounded">
								</div>
							</div>
							<div class="row golden-block">
							  <div class="col-xs-1 arrow">
							    <a ng-click="prevImage()"><i class="fa fa-chevron-left fa-2x" aria-hidden="true"></i></a>
							  </div>
							  <div ng-if="!nextImg" class="col-xs-10">
							  	<img ng-src="{{prevImg}}" class="img img-responsive img-rounded golden-image">
							  </div>
							<div ng-if="nextImg" class="col-xs-5">
							  <img ng-src="{{prevImg}}" class="img img-responsive img-rounded golden-image">
							</div>
							<div ng-if="nextImg" class="col-xs-5">
							  <img ng-src="{{nextImg}}" class="img img-responsive img-rounded golden-image">
							</div>
							  <div class="col-xs-1 arrow">
							    <a ng-click="nextImage()"><i class="fa fa-chevron-right fa-2x" aria-hidden="true"></i></a>
							  </div>
							</div>
						</div>
						<div class="col-xs-1 arrow">
							<a ng-click="next()"><i class="fa fa-chevron-right fa-2x" aria-hidden="true"></i></a>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" ng-click="exitModal()" class="btn btn-default" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
</div>