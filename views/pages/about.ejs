<div ng-repeat="sapphire in sapphires">
    <div class="container panel panel-body" ng-model="sapphire" id="main-content">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <h1>{{sapphire.mainTitle}}</h1>
                        <img class="img img-responsive thumbnail" src="/public/images/sapphire_logo.png">
                    </div>
                </div>
                <p></p>
                <p>{{ sapphire.motto }}</p>
                <div class="row">
                    <div class="col-md-3 col-md-offset-3">
                        <a href="https://www.grca.org/"><img class="club thumbnail img-responsive" ng-src="{{ sapphire.imgs[0] }}"></a>
                    </div>
                    <div class="col-md-3">
                        <a href="http://yankeegrc.azurewebsites.net/"><img class="club thumbnail img-responsive" ng-src="{{ sapphire.imgs[1] }}"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container panel panel-body">
        <h1>Our Story</h1>
        <hr>
        <div class="col-md-7">
            <p ng-repeat="story in sapphire.story">{{story}}</p>
        </div>
        <div class="col-md-5" id="about-img">
            <img class="thumbnail img-responsive" ng-src="{{ sapphire.imgs[2] }}">
            <div class="col-xs-8 col-xs-offset-2">
                <p>Our Golden Life is dedicated to Shadow who passed away July 30, 2007 at almost 14 yrs old.</p>
            </div>
        </div>
    </div>
</div>