<div class="container panel panel-body">
    <div class="col-md-8 col-md-offset-2">
    <h1>Login</h1>
        <form class="form-horizontal" name="login">   
            <div class="form-group">
                <input type="text" ng-model="user.username" ng-required="true" class="form-control" placeholder="username"/>
            </div>
            <div class="form-group">
                <input type="password" ng-model="user.password" ng-required="true" class="form-control" placeholder="password"/>
            </div>
            <button ng-click="userLogin(user)" class="btn btn-primary btn-block">Login</button>
        </form>
    </div>
</div>